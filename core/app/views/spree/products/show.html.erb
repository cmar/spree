<div class="clear">
  <div id="product-images" data-hook="product_images">
    <div id="main-image" data-hook>
      <%= render :partial => 'image' %>
    </div>
    <div id="thumbnails" data-hook>
      <%= render :partial => 'thumbnails', :locals => { :product => @product } %>
    </div>
  </div>
  <div id="product_show" data-hook="product_show">
    <% @body_id = 'product-details' %>
    <h1><%= accurate_title %></h1>
    <% if @product.price %>
      <div class="product_price" data-hook="product_price">
        <%= number_to_currency @product.price %>
      </div>
    <% end %>

    <div id="product-description" data-hook="product_description">
      <p><%= product_description(@product) rescue t(:product_has_no_description) %></p>
    </div>
    <div id="cart-form" class="clear" data-hook="cart_form">
      <%= render :partial => 'cart_form' %>
    </div>
    <div data-hook="product_properties">
      <%= render :partial => 'properties' %>
    </div>

    <%= render :partial => 'taxons' %>
  </div>
</div>


 
