<!-- no need for thumnails unless there is more then one image -->
<% if product.images.size > 1 %>
    <% product.images.each do |i| %>
      <%= link_to image_tag(i.attachment.url(:mini)), i.attachment.url(:product) %>
    <% end %>
    <% if @product.has_variants?
      @variants.each do |v|
        if v.available?
          v.images.each do |i| %>
            <%= link_to image_tag(i.attachment.url(:mini)), i.attachment.url(:product) %>
          <%
          end
        end
      end
    end
    %>
<% end %>
